@model MVC_CRUD_EF_WebGrid.Models.Usuario
@{
    ViewBag.Title = "DeletarUsuario";
}
<h2>Deletar Usuário</h2>
<h3>Tem certeza de que deseja deletar este usuário ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.usuarioNome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.usuarioNome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.usuarioEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.usuarioEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.usuarioSenha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.usuarioSenha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.usuarioAtivo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.usuarioAtivo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.usuarioID)
        <div class="form-actions no-color">
            <input type="submit" value="Deletar Usuário" class="btn btn-danger" /> |
            @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
